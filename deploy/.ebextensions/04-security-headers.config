###################################################################################################
# 04-security-headers.config
# Adiciona headers de segurança importantes para proteção contra ataques
###################################################################################################

files:
  "/etc/nginx/conf.d/security-headers.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # HSTS - Força HTTPS por 1 ano
      add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
      
      # Previne XSS
      add_header X-Content-Type-Options "nosniff" always;
      add_header X-Frame-Options "SAMEORIGIN" always;
      add_header X-XSS-Protection "1; mode=block" always;
      
      # Política de referência
      add_header Referrer-Policy "strict-origin-when-cross-origin" always;
      
      # Permissões
      add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;
      
      # Remove versão do servidor
      server_tokens off;
      
      # Content Security Policy (ajustar conforme necessário)
      add_header Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https:; frame-ancestors 'none';" always;

container_commands:
  01_test_nginx:
    command: "nginx -t"
  02_reload_nginx:
    command: "service nginx reload || true"