###################################################################################################
# 05-cloudwatch-logs.config
# Configura envio de logs para CloudWatch para monitoramento centralizado
###################################################################################################

option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 7
    
  aws:elasticbeanstalk:application:environment:
    LOG_LEVEL: INFO
    SPRING_OUTPUT_ANSI_ENABLED: never

files:
  "/opt/aws/amazon-cloudwatch-agent/bin/config.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/app/current/logs/spring.log",
                  "log_group_name": "/aws/elasticbeanstalk/ContainerView/app",
                  "log_stream_name": "{instance_id}/spring.log",
                  "timestamp_format": "%Y-%m-%d %H:%M:%S"
                },
                {
                  "file_path": "/var/log/nginx/error.log",
                  "log_group_name": "/aws/elasticbeanstalk/ContainerView/nginx",
                  "log_stream_name": "{instance_id}/error.log"
                },
                {
                  "file_path": "/var/log/eb-engine.log",
                  "log_group_name": "/aws/elasticbeanstalk/ContainerView/eb-engine",
                  "log_stream_name": "{instance_id}/eb-engine.log"
                }
              ]
            }
          }
        }
      }

commands:
  01_create_logs_dir:
    command: "mkdir -p /var/app/current/logs && chmod 755 /var/app/current/logs"